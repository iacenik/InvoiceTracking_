@model IEnumerable<EntityLayer.Entities.Expense>

@{
    ViewData["Title"] = "Gider Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="fas fa-plus"></i> Yeni Gider Ekle
</a>

<div class="table-responsive">
    <table id="expenseTable" class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Tarih</th>
                <th>Kategori</th>
                <th>Çalışan</th>
                <th>Tutar</th>
                <th>Para Birimi</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Date.ToString("dd/MM/yyyy")</td>
                    <td>@expense.Category?.CategoryName</td>
                    <td>@expense.Employee?.EmployeeName</td>
                    <td>@expense.Amount.ToString("N2")</td>
                    <td>@expense.Currency</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@expense.ExpenseId" class="btn btn-info btn-sm" title="Detay">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@expense.ExpenseId" class="btn btn-warning btn-sm" title="Düzenle">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@expense.ExpenseId" class="btn btn-danger btn-sm" title="Sil">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#expenseTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/Turkish.json"
                },
                "paging": true,
                "ordering": true,
                "info": true
            });
        });
    </script>
}
