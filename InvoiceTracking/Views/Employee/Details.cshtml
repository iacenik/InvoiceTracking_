@model EntityLayer.Entities.Employee

@{
    ViewData["Title"] = "Çalışan Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        Çalışan Bilgileri
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Adı:</dt>
            <dd class="col-sm-9">@Model.EmployeeName</dd>

            <dt class="col-sm-3">Soyadı:</dt>
            <dd class="col-sm-9">@Model.EmployeeSurname</dd>
        </dl>
    </div>
</div>

<h4>📌 Çalışanın Giderleri</h4>
@if (Model.Expenses.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Tutar</th>
                <th>Para Birimi</th>
                <th>Kategori</th>
                <th>Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model.Expenses)
            {
                <tr>
                    <td>@expense.Date.ToString("dd/MM/yyyy")</td>
                    <td>@expense.Amount</td>
                    <td>@expense.Currency</td>
                    <td>@expense.Category?.CategoryName</td>
                    <td>@expense.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Bu çalışanın herhangi bir gideri bulunmamaktadır.</p>
}

<a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-warning">Düzenle</a>
<a asp-action="Index" class="btn btn-secondary">Geri</a>
