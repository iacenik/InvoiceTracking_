@model List<EntityLayer.Entities.PaymentDetail>

@{
    ViewData["Title"] = "Ödeme Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Ödeme Detayları</h2>

    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> Yeni Ödeme Detayı Ekle
    </a>

    <table id="paymentDetailsTable" class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Ödeme Açıklaması</th>
                <th>Toplam Tutar</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model)
            {
                <tr>
                    <td>@detail.Payment?.Description</td>
                    <td>@detail.TotalAmount.ToString("C")</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@detail.PaymentDetailId" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                        <a asp-action="Delete" asp-route-id="@detail.PaymentDetailId" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#paymentDetailsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/Turkish.json"
                }
            });
        });
    </script>
}
