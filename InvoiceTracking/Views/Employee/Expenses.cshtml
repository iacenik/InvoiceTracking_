@model List<EntityLayer.Entities.Expense>

@{
    ViewData["Title"] = "Çalışan Giderleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Çalışan Giderleri</h2>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Gider ID</th>
                <th>Tarih</th>
                <th>Tutar</th>
                <th>Para Birimi</th>
                <th>Kategori</th>
                <th>Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var expense in Model)
                {
                    <tr>
                        <td>@expense.ExpenseId</td>
                        <td>@expense.Date.ToShortDateString()</td>
                        <td>@expense.Amount</td>
                        <td>@expense.Currency</td>
                        <td>@expense.Category?.CategoryName</td>
                        <td>@(string.IsNullOrWhiteSpace(expense.Description) ? "Açıklama Yok" : expense.Description)</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">Bu çalışana ait gider bulunmamaktadır.</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</div>
