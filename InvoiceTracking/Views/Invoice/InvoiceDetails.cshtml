@model IEnumerable<EntityLayer.Entities.InvoiceDetail>

<h2>Invoice Details</h2>

<a href="@Url.Action("Index")" class="btn btn-secondary mb-3">Back to Invoices</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model)
        {
            var firstProduct = detail.SoldProductsList.FirstOrDefault();
            <tr>
                <td>@firstProduct?.ProductName</td>
                <td>@detail.SoldProductsList.Sum(p => p.Quantity)</td>
                <td>@firstProduct?.UnitPrice</td>
                <td>@detail.TotalPrice</td>
            </tr>
        }
    </tbody>
</table>
