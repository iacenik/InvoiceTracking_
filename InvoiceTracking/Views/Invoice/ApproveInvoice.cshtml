@model EntityLayer.Entities.Invoice

<h2>Approve Invoice</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to approve this invoice? The amount will be deducted from the cash register.</p>
</div>

<table class="table table-bordered">
    <tr>
        <th>Invoice ID:</th>
        <td>@Model.InvoiceId</td>
    </tr>
    <tr>
        <th>Client:</th>
        <td>@Model.Client.CompanyName</td>
    </tr>
    <tr>
        <th>Total Amount:</th>
        <td>@Model.TotalAmount @Model.Currency</td>
    </tr>
</table>

<form asp-action="ApproveInvoice" method="post">
    <input type="hidden" asp-for="InvoiceId" />
    <button type="submit" class="btn btn-success">Approve</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
