@model EntityLayer.Entities.PaymentDetail

@{
    ViewData["Title"] = "Yeni Ödeme Detayı Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Müşteri Seçin</label>
        <select id="ClientId" class="form-select" asp-items="ViewBag.Clients">
            <option value="">Müşteri Seçin</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="PaymentId" class="form-label">Ödeme Seçin</label>
        <select asp-for="PaymentId" class="form-select" id="PaymentId">
            <option value="">Ödeme Seçin</option>
        </select>
        <span asp-validation-for="PaymentId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ürünler</label>
        <table class="table" id="productsTable">
            <thead>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Birim Fiyat</th>
                    <th>Miktar</th>
                    <th>Toplam</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <button type="button" id="addProduct" class="btn btn-success"><i class="fas fa-plus"></i> Ürün Ekle</button>
        <input type="hidden" asp-for="SoldProducts" id="SoldProducts" />
    </div>

    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Geri</a>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ClientId').change(function () {
                var clientId = $(this).val();
                $.getJSON('/Payment/GetPaymentsByClient', { clientId: clientId }, function (data) {
                    var paymentDropdown = $('#PaymentId');
                    paymentDropdown.empty();
                    paymentDropdown.append('<option value="">Ödeme Seçin</option>');
                    $.each(data, function (index, item) {
                        paymentDropdown.append('<option value="' + item.PaymentId + '">' + item.DisplayText + '</option>');
                    });
                });
            });

            $('#addProduct').click(function () {
                var row = `<tr>
                    <td><input type="text" class="form-control product-name" /></td>
                    <td><input type="number" class="form-control unit-price" step="0.01" /></td>
                    <td><input type="number" class="form-control quantity" min="1" /></td>
                    <td class="total-price">0.00</td>
                    <td><button type="button" class="btn btn-danger remove-product"><i class="fas fa-trash"></i></button></td>
                </tr>`;
                $('#productsTable tbody').append(row);
            });

            $(document).on('input', '.unit-price, .quantity', function () {
                var row = $(this).closest('tr');
                var unitPrice = parseFloat(row.find('.unit-price').val()) || 0;
                var quantity = parseFloat(row.find('.quantity').val()) || 0;
                row.find('.total-price').text((unitPrice * quantity).toFixed(2));
            });

            $(document).on('click', '.remove-product', function () {
                $(this).closest('tr').remove();
            });
        });
    </script>
}
