@model EntityLayer.Entities.Expense

@{
    ViewData["Title"] = "Gider Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-danger my-4">Gider Silme</h2>

<div class="card shadow p-4">
    <h4 class="text-center text-danger">Bu gideri silmek istediğinizden emin misiniz?</h4>
    <p class="text-center"><strong>@Model.Description</strong></p>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ExpenseId" />
        <div class="text-center mt-3">
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>
