@using static EntityLayer.Entities.Enums
@model EntityLayer.Entities.Expense

@{
    ViewData["Title"] = Model?.ExpenseId == 0 ? "Yeni Gider Ekle" : "Gider Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">@ViewData["Title"]</h2>

<div class="card shadow p-4">
    <form asp-action="@(Model?.ExpenseId == 0 ? "Create" : "Edit")">
        @if (Model?.ExpenseId != 0)
        {
            <input type="hidden" asp-for="ExpenseId" />
        }

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Tutar</label>
                <input asp-for="Amount" class="form-control" placeholder="Gider tutarını girin" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label">Para Birimi</label>
                <select asp-for="Currency" asp-items="Html.GetEnumSelectList<CurrencyType>()" class="form-select"></select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <label class="form-label">Kategori</label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label">Çalışan</label>
                <select asp-for="EmployeeId" asp-items="ViewBag.Employees" class="form-select"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-3">
            <label class="form-label">Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Gider açıklaması"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mt-4 text-center">
            <button type="submit" class="btn btn-success">@ViewData["Title"]</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>
