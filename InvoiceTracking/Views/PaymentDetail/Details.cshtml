@model EntityLayer.Entities.PaymentDetail

@{
    ViewData["Title"] = "Ödeme Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Ödeme Detay Bilgileri</h5>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Müşteri:</strong> @Model.Payment?.Client?.CompanyName</li>
            <li class="list-group-item"><strong>Ödeme Tarihi:</strong> @Model.Payment?.Date.ToString("dd/MM/yyyy")</li>
            <li class="list-group-item"><strong>Toplam Tutar:</strong> @Model.TotalAmount.ToString("N2") @Model.Payment?.Currency</li>
        </ul>

        <h5 class="mt-4">Satılan Ürünler</h5>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Ürünler</th>
                        <th>Toplam Tutar</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.SoldProducts</td>
                        <td>@Model.TotalAmount.ToString("N2") @Model.Payment?.Currency</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <a asp-action="Edit" asp-route-id="@Model.PaymentDetailId" class="btn btn-warning">
            <i class="fas fa-edit"></i> Düzenle
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Geri
        </a>
    </div>
</div>
