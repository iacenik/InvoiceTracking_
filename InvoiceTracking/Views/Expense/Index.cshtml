@model IEnumerable<EntityLayer.Entities.Expense>

@{
    ViewData["Title"] = "Tüm Giderler";
}

<h2 class="text-center my-4">📊 Tüm Giderler</h2>

<div class="d-flex justify-content-between mb-3">
    <a asp-action="Create" class="btn btn-primary">+ Yeni Gider Ekle</a>
</div>

<table id="expenseTable" class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Tutar</th>
            <th>Kategori</th>
            <th>Çalışan</th>
            <th>Para Birimi</th>
            <th>Tarih</th>
            <th class="text-center">İşlemler</th> <!-- 🔹 İşlem Kolonu -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ExpenseId</td>
                <td>@item.Amount.ToString("C2")</td>
                <td>@item.Category?.CategoryName</td>
                <td>@item.Employee?.EmployeeName @item.Employee?.EmployeeSurname</td>
                <td>@item.Currency</td>
                <td>@item.Date.ToShortDateString()</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.ExpenseId" class="btn btn-warning btn-sm">✏️ Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.ExpenseId" class="btn btn-danger btn-sm">🗑️ Sil</a>
                    <a asp-action="Details" asp-route-id="@item.ExpenseId" class="btn btn-info btn-sm">🔍 Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#expenseTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json"
                }
            });
        });
    </script>
}
