@model EntityLayer.Entities.Payment

@{
    ViewData["Title"] = "🗑 Ödeme Sil";
}

<div class="container mt-4">
    <h2>🗑 Ödeme Sil</h2>

    <p>Bu ödemeyi silmek istediğinizden emin misiniz?</p>

    <dl class="row">
        <dt class="col-sm-3">Müşteri:</dt>
        <dd class="col-sm-9">@Model.Client.CompanyName</dd>

        <dt class="col-sm-3">Tutar:</dt>
        <dd class="col-sm-9">@Model.Amount.ToString("N2")</dd>

        <dt class="col-sm-3">Para Birimi:</dt>
        <dd class="col-sm-9">@Model.Currency</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="PaymentId" />
        <button type="submit" class="btn btn-danger">🗑 Sil</button>
        <a asp-action="Index" class="btn btn-secondary">❌ İptal</a>
    </form>
</div>
