@model List<EntityLayer.Entities.Payment>

@{
    ViewData["Title"] = "Müşteri Ödemeleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Müşteri Ödemeleri</h2>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Ödeme No</th>
                <th>Tarih</th>
                <th>Tutar</th>
                <th>Para Birimi</th>
                <th>Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var payment in Model)
                {
                    <tr>
                        <td>@payment.PaymentId</td>
                        <td>@payment.Date.ToShortDateString()</td>
                        <td>@payment.Amount</td>
                        <td>@payment.Currency</td>
                        <td>@(string.IsNullOrWhiteSpace(payment.Description) ? "Açıklama Yok" : payment.Description)</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Bu müşteriye ait ödeme bulunmamaktadır.</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</div>
