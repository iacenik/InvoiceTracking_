@model EntityLayer.Entities.PaymentDetail

@{
    ViewData["Title"] = "Ödeme Detayını Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center text-danger">Ödeme Detayını Sil</h2>

    <div class="alert alert-warning">
        <p><strong>Ödeme Açıklaması:</strong> @Model.Payment?.Description</p>
        <p><strong>Toplam Tutar:</strong> @Model.TotalAmount.ToString("C")</p>
        <p>Bu ödeme detayını silmek istediğinize emin misiniz?</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="PaymentDetailId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Sil
        </button>
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div>
