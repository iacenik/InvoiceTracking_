@model IEnumerable<EntityLayer.Entities.Invoice>

<h2>Client Invoices</h2>

<a href="@Url.Action("Index")" class="btn btn-secondary mb-3">Back to All Invoices</a>

<table id="clientInvoiceTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Invoice ID</th>
            <th>Date</th>
            <th>Amount</th>
            <th>Currency</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceId</td>
                <td>@invoice.Date.ToString("yyyy-MM-dd")</td>
                <td>@invoice.TotalAmount</td>
                <td>@invoice.Currency</td>
                <td>@(invoice.IsPaid ? "Paid" : "Unpaid")</td>
                <td>
                    <a href="@Url.Action("InvoiceDetails", new { invoiceId = invoice.InvoiceId })" class="btn btn-info btn-sm">Details</a>
                    @if (!invoice.IsPaid)
                    {
                        <a href="@Url.Action("ApproveInvoice", new { invoiceId = invoice.InvoiceId })" class="btn btn-warning btn-sm">Approve</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#clientInvoiceTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "responsive": true
            });
        });
    </script>
}
