<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Mone Panel</title>

    <!-- Favicon -->
    <link rel="icon" href="~/img/favicon.ico" type="image/x-icon">

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Admin/plugins/fontawesome-free/css/all.min.css">

    <!-- AdminLTE Theme Style -->
    <link rel="stylesheet" href="~/Admin/dist/css/adminlte.min.css">
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("Index", "Home")" class="nav-link">Ana Sayfa</a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="@Url.Action("Index", "Home")" class="brand-link">
                <img src="~/img/mone-plint.png" alt="Logo" class="brand-image img-circle elevation-3">
                <span class="brand-text font-weight-light">Mone Panel</span>
            </a>

            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "CashRegister")" class="nav-link">
                                <i class="nav-icon fas fa-cash-register"></i>
                                <p>Kasa</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Client")" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Müşteriler</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Employee")" class="nav-link">
                                <i class="nav-icon fas fa-user-tie"></i>
                                <p>Çalışanlar</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "ExpenseCategory")" class="nav-link">
                                <i class="nav-icon fas fa-layer-group"></i>
                                <p>Kategori Çeşitleri</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Expense")" class="nav-link">
                                <i class="nav-icon fas fa-money-check-alt"></i>
                                <p>Giderler</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Invoice")" class="nav-link">
                                <i class="nav-icon fas fa-file-invoice"></i>
                                <p>Faturalar</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Payment")" class="nav-link">
                                <i class="nav-icon fas fa-money-bill-wave"></i>
                                <p>Ödemeler</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <h1 class="text-dark">@ViewData["Title"]</h1>
                </div>
            </section>

            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer text-center">
            <strong>&copy; 2025 <a href="https://mone.com">Mone</a></strong> | Tüm Hakları Saklıdır.
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/Admin/plugins/jquery/jquery.min.js"></script>
    <script src="~/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/dist/js/adminlte.min.js"></script>

    <!-- **EKLENMESİ GEREKEN KOD** -->
    @RenderSection("Scripts", required: false)

</body>
</html>
