@* Views/Payment/Delete.cshtml *@
@model EntityLayer.Entities.Payment
@{
    ViewData["Title"] = "Ödeme Sil";
}

<div class="container-fluid">
    <!-- Sayfa Başlığı -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Ödeme Sil</h1>
        <a asp-action="Index" class="btn btn-secondary btn-sm shadow-sm">
            <i class="fas fa-arrow-left fa-sm"></i> Listeye Dön
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Ödeme Sil Kartı -->
            <div class="card shadow mb-4 border-left-danger">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-danger">Bu ödemeyi silmek istediğinizden emin misiniz?</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> Dikkat: Bu işlem geri alınamaz! Ödemeyi silerseniz, ilgili tüm detaylar da silinecektir.
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <h5 class="font-weight-bold">Ödeme Bilgileri</h5>
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th style="width: 150px;">Ödeme No</th>
                                            <td>@Model.PaymentId</td>
                                        </tr>
                                        <tr>
                                            <th>Tarih</th>
                                            <td>@Model.Date.ToShortDateString()</td>
                                        </tr>
                                        <tr>
                                            <th>Toplam Tutar</th>
                                            <td>@Model.TotalAmount @Model.Currency</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-4">
                                <h5 class="font-weight-bold">İlişkili Bilgiler</h5>
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th style="width: 150px;">Müşteri</th>
                                            <td>@(Model.Client?.CompanyName ?? "-")</td>
                                        </tr>
                                        <tr>
                                            <th>Detay Sayısı</th>
                                            <td>
                                                <span class="badge bg-info text-white">@Model.PaymentDetails.Count</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Açıklama</th>
                                            <td>@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4 text-center">
                        <input type="hidden" asp-for="PaymentId" />
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> İptal
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Ödemeyi Sil
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 