@model EntityLayer.Entities.Payment

@{
    ViewData["Title"] = "Ödeme Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<p>Bu ödemeyi silmek istediğinize emin misiniz?</p>

<table class="table">
    <tr><th>Müşteri</th><td>@Model.Client?.CompanyName</td></tr>
    <tr><th>Tarih</th><td>@Model.Date.ToString("dd/MM/yyyy")</td></tr>
    <tr><th>Tutar</th><td>@Model.Amount.ToString("N2")</td></tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PaymentId" />
    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Sil</button>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Geri</a>
</form>
