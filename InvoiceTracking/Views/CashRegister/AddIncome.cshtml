@model EntityLayer.Entities.Expense

@{
    ViewData["Title"] = "Yeni Gider Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Yeni Gider Ekle</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label>Çalışan</label>
            <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employees">
                <option value="">Çalışan Seçin</option>
            </select>
        </div>

        <div class="form-group">
            <label>Gider Türü</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                <option value="">Gider Türü Seçin</option>
            </select>
        </div>

        <div class="form-group">
            <label>Miktar</label>
            <input asp-for="Amount" type="number" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Para Birimi</label>
            <select asp-for="Currency" class="form-control">
                <option value="EUR">EUR</option>
                <option value="RON">RON</option>
                <option value="USD">USD</option>
            </select>
        </div>

        <div class="form-group">
            <label>Açıklama</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </form>
</div>
