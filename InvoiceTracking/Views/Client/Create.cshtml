@model EntityLayer.Entities.Client

@{
    ViewData["Title"] = "Yeni Müşteri Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Yeni Müşteri Ekle</h2>

    <form asp-action="Create" method="post" class="shadow p-4 bg-light rounded">
        <div class="mb-3">
            <label class="form-label">Firma Adı</label>
            <input asp-for="CompanyName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Ülke</label>
            <input asp-for="Country" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">IBAN</label>
            <input asp-for="Iban" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
