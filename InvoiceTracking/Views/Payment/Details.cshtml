@model EntityLayer.Entities.Payment

@{
    ViewData["Title"] = "Ödeme Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<table class="table table-bordered">
    <tr>
        <th>Müşteri</th>
        <td>@Model.Client?.CompanyName</td>
    </tr>
    <tr>
        <th>Tarih</th>
        <td>@Model.Date.ToString("dd/MM/yyyy")</td>
    </tr>
    <tr>
        <th>Tutar</th>
        <td>@Model.Amount.ToString("N2")</td>
    </tr>
    <tr>
        <th>Para Birimi</th>
        <td>@Model.Currency</td>
    </tr>
</table>

<a asp-action="Edit" asp-route-id="@Model.PaymentId" class="btn btn-warning">
    <i class="fas fa-edit"></i> Düzenle
</a>
<a asp-action="Index" class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> Geri
</a>
