@model List<EntityLayer.Entities.InvoiceDetail>

@{
    ViewData["Title"] = "Fatura Detayları";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="mb-4">📜 Fatura Detayları</h2>
        <a asp-action="Create" class="btn btn-primary">➕ Yeni Fatura Detayı</a>
    </div>

    <table id="invoiceDetailTable" class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Fatura ID</th>
                <th>Ürünler</th>
                <th>Toplam Tutar</th>
                <th>Para Birimi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model)
            {
                <tr>
                    <td>@detail.InvoiceDetailId</td>
                    <td>@detail.InvoiceId</td>
                    <td>
                        <ul>
                            @foreach (var product in detail.SoldProductsList)
                            {
                                <li>@product.ProductName (@product.Quantity x @product.UnitPrice.ToString("N2"))</li>
                            }
                        </ul>
                    </td>
                    <td>@detail.TotalPrice.ToString("N2")</td>
                    <td>
                        @if (detail.Currency == EntityLayer.Entities.Enums.CurrencyType.EUR)
                        {
                            <span class="badge bg-info">💶 EUR</span>
                        }
                        else if (detail.Currency == EntityLayer.Entities.Enums.CurrencyType.RON)
                        {
                            <span class="badge bg-warning">🇷🇴 RON</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">💵 USD</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@detail.InvoiceDetailId" class="btn btn-sm btn-outline-warning">✏ Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@detail.InvoiceDetailId" class="btn btn-sm btn-outline-danger">🗑 Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#invoiceDetailTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "language": {
                    "search": "Ara:",
                    "lengthMenu": "Sayfa başına _MENU_ kayıt göster",
                    "info": "_TOTAL_ kayıt içinden _START_ - _END_ gösteriliyor",
                    "paginate": { "previous": "Önceki", "next": "Sonraki" }
                }
            });
        });
    </script>
}
