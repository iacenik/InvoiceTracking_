@model List<EntityLayer.Entities.ExpenseCategory>

@{
    ViewData["Title"] = "Gider Kategorileri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Gider Kategorileri</h2>

    <a asp-action="Create" class="btn btn-success mb-3">Yeni Kategori Ekle</a>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Kategori Adı</th>
                <th>Açıklama</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryName</td>
                    <td>@(string.IsNullOrWhiteSpace(category.Description) ? "Açıklama Yok" : category.Description)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-primary btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
