@model EntityLayer.Entities.PaymentDetail

@{
    ViewData["Title"] = "Ödeme Detayı Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Ödeme Detayı Düzenle</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="PaymentDetailId" />

        <div class="mb-3">
            <label class="form-label">Ödeme</label>
            <select asp-for="PaymentId" asp-items="ViewBag.Payments" class="form-control" disabled>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Ürün Adı</label>
            <input type="text" class="form-control" name="productName" value="@Model.SoldProductsList.FirstOrDefault()?.ProductName">
        </div>

        <div class="mb-3">
            <label class="form-label">Birim Fiyat</label>
            <input type="number" class="form-control" name="unitPrice" step="0.01" value="@Model.SoldProductsList.FirstOrDefault()?.UnitPrice">
        </div>

        <div class="mb-3">
            <label class="form-label">Adet</label>
            <input type="number" class="form-control" name="quantity" value="@Model.SoldProductsList.FirstOrDefault()?.Quantity">
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Güncelle
        </button>
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div>
