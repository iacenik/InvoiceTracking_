@using EntityLayer.Entities

@model IEnumerable<EntityLayer.Entities.PaymentDetail>

@{
    ViewData["Title"] = "Ödeme Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="fas fa-plus"></i> Yeni Ödeme Detayı Ekle
</a>

<div class="table-responsive">
    <table id="paymentDetailsTable" class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Müşteri</th>
                <th>Ödeme Tarihi</th>
                <th>Ürünler</th>
                <th>Tutar</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var paymentDetail in Model)
            {
                <tr>
                    <td>@paymentDetail.Payment?.Client?.CompanyName</td>
                    <td>@paymentDetail.Payment?.Date.ToString("dd.MM.yyyy")</td>
                    <td>
                        <ul class="list-unstyled">
                            @foreach (var product in System.Text.Json.JsonSerializer.Deserialize<List<SoldProduct>>(paymentDetail.SoldProducts ?? "[]"))
                            {
                                <li>
                                    <strong>@product.ProductName</strong>
                                    - @product.Quantity Adet
                                    - @product.UnitPrice.ToString("N2") @product.Currency 
                                    - <span class="text-success">@product.TotalPrice.ToString("N2")</span>
                                </li>
                            }
                        </ul>
                    </td>
                    <td>@paymentDetail.TotalAmount.ToString("N2") @paymentDetail.Currency</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@paymentDetail.PaymentDetailId" class="btn btn-info btn-sm" title="Detay">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@paymentDetail.PaymentDetailId" class="btn btn-warning btn-sm" title="Düzenle">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@paymentDetail.PaymentDetailId" class="btn btn-danger btn-sm" title="Sil">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#paymentDetailsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/Turkish.json"
                },
                "paging": true,
                "ordering": true,
                "info": true
            });
        });
    </script>
}
