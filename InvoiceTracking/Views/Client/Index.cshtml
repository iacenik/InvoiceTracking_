@model IEnumerable<EntityLayer.Entities.Client>

@{
    ViewData["Title"] = "Müşteri Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Yeni Müşteri Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Şirket Adı</th>
            <th>Ülke</th>
            <th>Adres</th>
            <th>Banka</th>
            <th>Eklenme Tarihi</th> <!-- Yeni sütun eklendi -->
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.CompanyName</td>
                <td>@client.Country</td>
                <td>@client.Address</td>
                <td>@client.BankName</td>
                <td>@client.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td> <!-- Tarihi formatlı göster -->
                <td>
                    <a asp-action="Details" asp-route-id="@client.ClientId" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@client.ClientId" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@client.ClientId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
