@using static EntityLayer.Entities.Enums
@model EntityLayer.Entities.Expense

@{
    ViewData["Title"] = "Yeni Gider Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">📝 Yeni Gider Ekle</h2>

<div class="card shadow p-4">
    <form asp-action="Create" method="post">
        <div class="row">
            <!-- 🔹 Tutar -->
            <div class="col-md-6">
                <label class="form-label fw-bold">💰 Tutar</label>
                <input asp-for="Amount" class="form-control" placeholder="Gider tutarını girin" required />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <!-- 🔹 Para Birimi -->
            <div class="col-md-6">
                <label class="form-label fw-bold">💵 Para Birimi</label>
                <select asp-for="Currency" asp-items="Html.GetEnumSelectList<CurrencyType>()" class="form-select"></select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-3">
            <!-- 🔹 Kategori Seçimi -->
            <div class="col-md-6">
                <label class="form-label fw-bold">📂 Kategori</label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- 🔹 Çalışan Seçimi -->
            <div class="col-md-6">
                <label class="form-label fw-bold">👤 Çalışan</label>
                <select asp-for="EmployeeId" asp-items="ViewBag.Employees" class="form-select"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
        </div>

        <!-- 🔹 Açıklama Alanı -->
        <div class="mt-3">
            <label class="form-label fw-bold">📝 Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Gider açıklaması girin"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- 🔹 Tarih Seçimi -->
        <div class="mt-3">
            <label class="form-label fw-bold">📅 Tarih</label>
            <input asp-for="Date" class="form-control" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <!-- 🔹 Butonlar -->
        <div class="mt-4 text-center">
            <button type="submit" class="btn btn-success px-4">
                <i class="fas fa-save"></i> Kaydet
            </button>
            <a asp-action="Index" class="btn btn-secondary px-4">
                <i class="fas fa-times"></i> İptal
            </a>
        </div>
    </form>
</div>
