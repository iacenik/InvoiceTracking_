@model List<EntityLayer.Entities.Employee>

@{
    ViewData["Title"] = "Çalışan Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Çalışan Listesi</h2>

    <a asp-action="Create" class="btn btn-success mb-3">Yeni Çalışan Ekle</a>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.EmployeeSurname</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-primary btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-danger btn-sm">Sil</a>
                        <a asp-action="Expenses" asp-route-employeeId="@employee.EmployeeId" class="btn btn-warning btn-sm">Giderler</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
