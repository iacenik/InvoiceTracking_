@model EntityLayer.Entities.PaymentDetail

@{
    ViewData["Title"] = "Ödeme Detayını Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 text-danger">@ViewData["Title"]</h2>

<div class="card border-danger shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Bu ödeme detayını silmek istediğinize emin misiniz?</h5>
        <p class="text-muted">Bu işlem geri alınamaz.</p>

        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Ödeme ID:</strong> @Model.PaymentId</li>
            <li class="list-group-item"><strong>Ürünler:</strong> @Model.SoldProducts</li>
            <li class="list-group-item"><strong>Tutar:</strong> @Model.TotalAmount.ToString("N2")</li>
        </ul>

        <form asp-action="DeleteConfirmed" method="post" class="mt-3">
            <input type="hidden" asp-for="PaymentDetailId" />

            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Sil
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Geri
            </a>
        </form>
    </div>
</div>
