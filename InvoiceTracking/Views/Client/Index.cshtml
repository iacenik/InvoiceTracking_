@model List<EntityLayer.Entities.Client>

@{
    ViewData["Title"] = "Müşteri Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Müşteri Listesi</h2>

    <a asp-action="Create" class="btn btn-success mb-3">Yeni Müşteri Ekle</a>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Firma Adı</th>
                <th>Ülke</th>
                <th>IBAN</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td>@client.CompanyName</td>
                    <td>@client.Country</td>
                    <td>@client.Iban</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@client.ClientId" class="btn btn-primary btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@client.ClientId" class="btn btn-danger btn-sm">Sil</a>
                        <a asp-action="Invoices" asp-route-clientId="@client.ClientId" class="btn btn-info btn-sm">Faturalar</a>
                        <a asp-action="Payments" asp-route-clientId="@client.ClientId" class="btn btn-warning btn-sm">Ödemeler</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

