@model EntityLayer.Entities.Employee

@{
    ViewData["Title"] = "Yeni Çalışan Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Yeni Çalışan Ekle</h2>

    <form asp-action="Create" method="post" class="shadow p-4 bg-light rounded">
        <div class="mb-3">
            <label class="form-label">Ad</label>
            <input asp-for="EmployeeName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Soyad</label>
            <input asp-for="EmployeeSurname" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
