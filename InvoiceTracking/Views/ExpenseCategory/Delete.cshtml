@* Views/ExpenseCategory/Delete.cshtml *@
@model EntityLayer.Entities.ExpenseCategory
@{
    ViewData["Title"] = "Kategori Sil";
}

<div class="container-fluid">
    <!-- Sayfa Başlığı -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Kategori Sil</h1>
        <a asp-action="Index" class="btn btn-secondary btn-sm shadow-sm">
            <i class="fas fa-arrow-left fa-sm"></i> Listeye Dön
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Kategori Sil Kartı -->
            <div class="card shadow mb-4 border-left-danger">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-danger">Bu kategoriyi silmek istediğinizden emin misiniz?</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> Dikkat: Bu işlem geri alınamaz! Bu kategoriyi silerseniz, bu kategoriye ait tüm giderler de silinecektir.
                    </div>

                    <div class="table-responsive mt-4">
                        <table class="table table-bordered">
                            <tr>
                                <th style="width: 200px;">Kategori ID</th>
                                <td>@Model.CategoryId</td>
                            </tr>
                            <tr>
                                <th>Kategori Adı</th>
                                <td><strong>@Model.CategoryName</strong></td>
                            </tr>
                            <tr>
                                <th>Açıklama</th>
                                <td>@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</td>
                            </tr>
                            <tr>
                                <th>İlişkili Gider Sayısı</th>
                                <td>
                                    <span class="badge bg-danger text-white">@Model.Expenses.Count</span>
                                    @if (Model.Expenses.Count > 0)
                                    {
                                        <div class="small text-danger mt-1">
                                            Bu kategoriye ait @Model.Expenses.Count adet gider kaydı bulunmaktadır ve hepsi silinecektir!
                                        </div>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4 text-center">
                        <input type="hidden" asp-for="CategoryId" />
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> İptal
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Kategoriyi Sil
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>