@model EntityLayer.Entities.CashRegister

@{
    ViewData["Title"] = "Kasa Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">💰 Kasa Yönetimi</h2>

    <!-- Başarı Mesajı -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="row">
        <!-- 🔹 Mevcut Kasa Durumu -->
        <div class="col-md-6">
            <div class="card border-primary shadow">
                <div class="card-header bg-primary text-white">📊 Kasa Durumu</div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item">Toplam Gelir (EUR): <strong>@Model.TotalIncomeEUR €</strong></li>
                        <li class="list-group-item">Toplam Gider (EUR): <strong>@Model.TotalExpenseEUR €</strong></li>
                        <li class="list-group-item text-success">Bakiye (EUR): <strong>@Model.BalanceEUR €</strong></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- 🔹 Gelir Ekleme Formu -->
        <div class="col-md-6">
            <div class="card border-success shadow">
                <div class="card-header bg-success text-white">📥 Gelir Ekle</div>
                <div class="card-body">
                    <form asp-action="AddIncome" method="post">
                        <div class="form-group">
                            <label>Tutar</label>
                            <input type="number" name="amount" class="form-control" required>
                        </div>
                        <div class="form-group mt-2">
                            <label>Para Birimi</label>
                            <select name="currency" class="form-control">
                                <option value="EUR">EUR</option>
                                <option value="RON">RON</option>
                                <option value="USD">USD</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success mt-3">
                            <i class="fas fa-plus"></i> Gelir Ekle
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- 🔹 Gider Çıkarma Formu -->
        <div class="col-md-6 mt-4">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">📤 Gider Çıkar</div>
                <div class="card-body">
                    <form asp-action="DeductExpense" method="post">
                        <div class="form-group">
                            <label>Tutar</label>
                            <input type="number" name="amount" class="form-control" required>
                        </div>
                        <div class="form-group mt-2">
                            <label>Para Birimi</label>
                            <select name="currency" class="form-control">
                                <option value="EUR">EUR</option>
                                <option value="RON">RON</option>
                                <option value="USD">USD</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-danger mt-3">
                            <i class="fas fa-minus"></i> Gider Çıkar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
