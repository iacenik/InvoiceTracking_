@model EntityLayer.Entities.InvoiceDetail

@{
    ViewData["Title"] = "Fatura Detayını Sil";
}

<div class="container mt-4">
    <h2>🗑 Fatura Detayını Sil</h2>

    <p>Bu detayı silmek istediğinizden emin misiniz?</p>

    <dl class="row">
        <dt class="col-sm-3">Fatura ID:</dt>
        <dd class="col-sm-9">@Model.InvoiceId</dd>

        <dt class="col-sm-3">Toplam Tutar:</dt>
        <dd class="col-sm-9">@Model.TotalPrice.ToString("N2")</dd>

        <dt class="col-sm-3">Para Birimi:</dt>
        <dd class="col-sm-9">@Model.Currency</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="InvoiceDetailId" />
        <button type="submit" class="btn btn-danger">🗑 Sil</button>
        <a asp-action="InvoiceDetails" asp-route-invoiceId="@Model.InvoiceId" class="btn btn-secondary">❌ İptal</a>
    </form>
</div>
