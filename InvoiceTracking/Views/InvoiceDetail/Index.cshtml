@model IEnumerable<EntityLayer.Entities.InvoiceDetail>

@{
    ViewData["Title"] = "Fatura Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Yeni Fatura Detayı Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Fatura ID</th>
            <th>Ürün</th>
            <th>Miktar</th>
            <th>Birim Fiyat</th>
            <th>Toplam Fiyat</th>
            <th>Para Birimi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model)
        {
            <tr>
                <td>@detail.InvoiceId</td>
                <td>@detail.Item?.ItemName</td>
                <td>@detail.Quantity</td>
                <td>@detail.UnitPrice.ToString("N2")</td>
                <td>@detail.TotalPrice.ToString("N2")</td>
                <td>@detail.Currency</td>
                <td>
                    <a asp-action="Details" asp-route-id="@detail.InvoiceDetailId" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@detail.InvoiceDetailId" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@detail.InvoiceDetailId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
